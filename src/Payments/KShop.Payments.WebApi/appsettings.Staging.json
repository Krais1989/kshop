{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=dbs_payments;Port=3306;Database=db_payments;Uid=asd;Pwd=asd;",
    "RedisConnection": "redis:6379,ssl=false,password=asd"
  },

  "RabbitConnection": {
    "HostName": "msgb_rabbitmq",
    "VirtualHost": "kshop",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest"
  },

  "TracingOptions": {
    "Sources": [ "KShopMassTransit" ],
    "JaegerOptions": {
      "AgentHost": "trace_jaeger",
      "AgentPort": 6831,
      "MaxPayloadSizeInBytes": 4096,
      "ExportProcessorType": "Batch",
      "BatchExportProcessorOptions": {
        "MaxQueueSize": 2048,
        "ScheduledDelayMilliseconds": 5000,
        "ExporterTimeoutMilliseconds": 30000,
        "MaxExportBatchSize": 512
      }
    }
  },

  "MetricsOptions": {
    "DefaultContextLabel": "KShop",
    "InfluxOptions": {
      "BaseUri": "http://metr_influxdb:8086",
      "Database": "db_kshop_metrics",
      "UserName": "influx",
      "Password": "asdasdasd",
      "FlushInterval": "0:0:5",
      "HttpPolicy": {
        "BackoffPeriod": "0:0:30",
        "FailuresBeforeBackoff": 5,
        "Timeout": "0:0:10"
      }
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://log_seq:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Payments WebApi"
    }
  }

}
